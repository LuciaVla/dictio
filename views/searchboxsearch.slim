.search-alt
  .container
    .search-alt__wrapper
      .search-alt__wrap
        .search-alt__top
          .search__item 
            label for="translate-from" Search in:
            .custom-select
              select name="translate-from" id="translate-from"
                - @dict_info.each do |code, info|
                  option value="#{code}" selected=("selected" if @dictcode==code) #{info['label']}
          .search__item
            label for="expression" Expression
            .search__input
              input type="text" id="expression" placeholder="Dům" value=@search
              button.btn.btn--search
                span.icon.icon--magnifier
                  svg.icon__svg xmlns:xlink="http://www.w3.org/1999/xlink"
                    use xlink:href="/img/icons.svg#magnifier" x="0" y="0" width="100%" height="100%"
        .search-alt__options
          label.checkbox
            input type="checkbox" name="deklin" checked=@search_params['deklin']
              span
              | cover inflicted forms
          label.checkbox
            input type="checkbox" name="diak" checked=@search_params['diak']
              span
              | ignore diacritics
          label.checkbox
            input type="checkbox" name="spojeni" checked=@search_params['spojeni']
              span
              | cover collocations
